<Page
    x:Class="XAMLPad.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:XAMLPad.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:XAMLPad"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Foreground="{DynamicResource Theme_TextBrush}"
    mc:Ignorable="d">

    <Grid RowDefinitions="auto, *">
        <StackPanel
            Height="50"
            Padding="10"
            Background="#1c2834"
            Orientation="Horizontal"
            Spacing="5">
            <Image Margin="0,5,0,0" Source="/XAMLPad;component/Resources/opensilver.png" />
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="Segoe UI"
                FontSize="26"
                Foreground="White"
                Text="XAMLPad" />
        </StackPanel>

        <Grid Grid.Row="1" ColumnDefinitions="*,*">
            <Grid>
                <components:MonacoEditor
                    x:Name="Editor"
                    Code="{Binding EditorCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Language="xml" />
                <Button
                    Width="80"
                    Height="35"
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{Binding RunCommand}"
                    Content="Run"
                    Cursor="Hand" />
            </Grid>
            <components:XamlPreviewControl Grid.Column="1" XamlText="{Binding RenderedXaml}" />
        </Grid>
    </Grid>
</Page>
